{
	"name": "openturbo",
	"version": "0.0.2",
	"description": "TurboRepo-style task runner for Bun with Git worktree awareness",
	"bin": {
		"ot": "src/cmd.ts"
	},
	"files": [
		"src",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"all": "bun run src/cmd.ts all",
		"build": "bun run build.ts --current",
		"test": "bun test",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [],
	"author": "Shun Takahashi<shuntksh@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "1.3.5",
		"typescript": "5.9.3"
	},
	"cspell": {
		"ignoreWords": [
			"openturbo"
		]
	}
}
